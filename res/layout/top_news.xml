<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/news_back">

    <ImageView
        android:id="@+id/top_news_image"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginBottom="8dp"
        android:adjustViewBounds="true"
        android:clipToOutline="true"
        android:layout_marginLeft="30dp"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/top_news_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/top_news_image"
            android:text="Source"
            android:textStyle="bold"
             />

        <TextView
            android:id="@+id/top_news_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/top_news_image"
            android:layout_toRightOf="@id/top_news_source"
            android:text="21 hours ago"
            android:layout_marginLeft="10dp"
             />
    </LinearLayout>

    <!-- Replace with actual drawable -->

    <TextView
        android:id="@+id/top_news_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_news_source"
        android:text="Title"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textAppearance="?attr/textAppearanceListItem" />

    <!-- Include your buttons for Chrome, Twitter, and Facebook here -->

</LinearLayout>
