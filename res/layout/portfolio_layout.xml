<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/portfolio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:visibility="gone"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:textColor="#000">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Portfolio"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/black"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow>

                    <TextView
                        android:padding="8dp"
                        android:text="Shares Owned :"
                        android:textColor="#000" />

                    <TextView
                        android:id="@+id/tvSharesOwned"
                        android:layout_width="62dp"
                        android:gravity="end"
                        android:padding="8dp"
                        android:textColor="#000" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:padding="8dp"
                        android:text="Avg. Cost / Share:"
                        android:textColor="#000" />

                    <TextView
                        android:id="@+id/tvAvgCost"
                        android:gravity="end"
                        android:padding="8dp"
                        android:textColor="#000" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:padding="8dp"
                        android:text="Total Cost :"
                        android:textColor="#000" />

                    <TextView
                        android:id="@+id/tvTotalCost"
                        android:gravity="end"
                        android:padding="8dp"
                        android:textColor="#000" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:padding="8dp"
                        android:text="Change :"
                        android:textColor="#000" />

                    <TextView
                        android:id="@+id/tvChange"
                        android:gravity="end"
                        android:padding="8dp"
                        android:textColor="@color/red" /> <!-- Set the color for negative change -->
                </TableRow>

                <TableRow android:layout_height="25dp">

                    <TextView
                        android:padding="8dp"
                        android:text="Market Value :"
                        android:textColor="#000" />

                    <TextView
                        android:id="@+id/tvMarketValue"
                        android:gravity="end"
                        android:padding="8dp"
                        android:textColor="@color/red"
                        android:textStyle="bold" />
                </TableRow>
            </TableLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btnTrade"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="90dp"
            android:backgroundTint="@color/green"
            android:radius="15dp"
            android:text="TRADE"
            android:textColor="@color/white" />

        <!-- Reference to the color for the button -->
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>