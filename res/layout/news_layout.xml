<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="105dp"
    android:layout_margin="2dp"
    android:orientation="horizontal"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/news_back">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/news_source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Source"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/news_datetime"
                android:layout_width="84dp"
                android:layout_height="wrap_content"
                android:text="Time"
                android:layout_marginLeft="10dp"
                android:textAppearance="?android:attr/textAppearanceSmall" />
        </LinearLayout>

        <TextView
            android:id="@+id/news_headline"
            android:layout_width="243dp"
            android:layout_height="85dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="Title"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold" />

        <!-- Buttons for Chrome, Twitter, and Facebook can be added here if they need to be part of the RecyclerView item -->
    </LinearLayout>

    <ImageView
        android:id="@+id/news_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop"
        android:padding="0dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="5dp"
        android:background="@mipmap/ic_image"

        /> <!-- Replace with your own placeholder image in the drawable folder -->

</LinearLayout>
